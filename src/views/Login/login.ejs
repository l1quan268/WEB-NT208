<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng nhập</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background: linear-gradient(135deg, #f8f5f2, #f2e8dc);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      }

      .auth-box {
        background-color: #e1d0bf;
        opacity: 90%;
        padding: 40px 30px;
        border-radius: 20px;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.08);
        width: 100%;
        max-width: 400px;
        position: relative;
      }

      .auth-box h3 {
        text-align: center;
        font-weight: 700;
        margin-bottom: 30px;
        color: #333;
      }

      .form-label {
        font-weight: 600;
      }

      .btn-primary {
        background-color: #000;
        border: none;
        width: 100%;
        padding: 12px;
        font-weight: 600;
        border-radius: 8px;
        transition: background-color 0.3s ease;
      }

      .btn-primary:hover {
        background-color: #333;
      }

      .btn-google {
        background-color: #db4437;
        color: white;
        border: none;
        width: 100%;
        padding: 12px;
        margin-top: 15px;
        border-radius: 8px;
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: background-color 0.3s ease;
      }

      .btn-google:hover {
        background-color: #c1352d;
      }

      .btn-google img {
        width: 22px;
        height: 22px;
        margin-left: 12px;
      }

      .form-check-label {
        font-size: 14px;
        color: #555;
      }

      .toggle-auth {
        text-align: center;
        margin-top: 20px;
        font-size: 14px;
      }

      .toggle-auth a {
        font-weight: 600;
        color: #000;
        text-decoration: none;
      }

      .toggle-auth a:hover {
        text-decoration: underline;
      }

      .float-end.toggle-auth {
        font-size: 14px;
        color: #007bff;
        margin-top: 5px;
      }

      .text-center.mt-3 {
        font-size: 14px;
        color: #888;
      }

      .close-btn {
        position: absolute;
        top: 15px;
        right: 20px;
        background: none;
        border: none;
        font-size: 22px;
        font-weight: bold;
        color: #888;
        cursor: pointer;
        transition: color 0.2s ease;
      }

      .close-btn:hover {
        color: #000;
      }

      /* Cập nhật CSS để không làm mất form khi hiển thị thông báo */
      .alert-box-container {
        position: absolute;
        top: 0; /* Đảm bảo thông báo xuất hiện ở đầu trang */
        left: 0;
        right: 0;
        z-index: 999; /* Đảm bảo thông báo hiển thị trên các phần tử khác */
        padding: 10px;
      }

      .alert {
        margin: 0;
        padding: 10px;
        border: 1px solid #ccc; /* Để dễ nhìn thấy thông báo */
        z-index: 999;
      }
    </style>
  </head>
  <body>
    <div class="alert-box-container">
      <% if (typeof success !== 'undefined' && success) { %>
      <div
        class="alert alert-success alert-dismissible fade show"
        role="alert"
        id="alert-box"
      >
        <%= success %>
      </div>
      <% } %> <% if (typeof error !== 'undefined' && error) { %>
      <div
        class="alert alert-danger alert-dismissible fade show"
        role="alert"
        id="alert-box"
      >
        <%= error %>
      </div>
      <% } %>
    </div>

    <div class="auth-box">
      <!-- Sửa đường dẫn đóng trang -->
      <button class="close-btn" onclick="window.location.href='/'">
        &times;
      </button>

      <h3>Đăng nhập</h3>
      <form action="/login" method="POST">
        <!-- Thêm CSRF token nếu cần -->
        <% if (typeof csrfToken !== 'undefined') { %>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <% } %>

        <div class="mb-3">
          <label class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            name="email"
            placeholder="Nhập email"
            required
            value="<%= typeof email !== 'undefined' ? email : '' %>"
          />
        </div>
        <div class="mb-3">
          <label class="form-label">Mật khẩu</label>
          <input
            type="password"
            class="form-control"
            name="password"
            placeholder="Nhập mật khẩu"
            required
          />
        </div>
        <div class="mb-3 d-flex justify-content-between align-items-center">
          <div class="form-check">
            <input type="checkbox" class="form-check-input" name="remember" />
            <label class="form-check-label">Ghi nhớ</label>
          </div>
          <a class="float-end toggle-auth" href="/forget-password"
            >Quên mật khẩu?</a
          >
        </div>
        <button type="submit" class="btn btn-primary">Đăng nhập</button>
        <div class="text-center mt-3">hoặc</div>
        <a href="/auth/google" class="btn btn-google">
          Đăng nhập bằng Google
          <img
            src="https://i.postimg.cc/DfHhVfZ0/images-1-Photoroom-1.png"
            alt="Google"
            style="width: 27px; height: 27px"
          />
        </a>

        <div class="toggle-auth">
          Bạn chưa có tài khoản?
          <a href="/signup">Đăng ký ngay</a>
        </div>
      </form>
    </div>

    <script>
      // Tự động ẩn alert sau 4 giây
      setTimeout(() => {
        const alertBox = document.getElementById("alert-box");
        if (alertBox) {
          alertBox.classList.remove("show");
          alertBox.classList.add("fade");
          alertBox.style.opacity = "0";

          // Sau khi ẩn thì xóa khỏi DOM
          setTimeout(() => {
            alertBox.remove();
          }, 500);
        }
      }, 2000);
    </script>
  </body>
</html>
