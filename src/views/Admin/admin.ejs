          await Swal.fire({
            icon: 'error',
            title: 'Thất bại',
            text: updateRes.message || 'Không thể cập nhật.'
          });
        }

      } catch (error) {
        console.error("❌ Edit user error:", error);
        await Swal.fire({
          icon: 'error',
          title: 'Lỗi hệ thống',
          text: 'Không thể kết nối tới máy chủ!'
        });
      }
    }

