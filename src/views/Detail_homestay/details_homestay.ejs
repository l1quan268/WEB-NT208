    // B·∫ÆT ƒê·∫¶U T·ª™ NG√ÄY SAU CHECKIN, K·∫æT TH√öC TR∆Ø·ªöC CHECKOUT
    startDate.setDate(startDate.getDate() + 1); // Ng√†y sau checkin
    
    for (let d = new Date(startDate); d < endDate; d.setDate(d.getDate() + 1)) {
      const dateStr = d.toISOString().split('T')[0];
      
      // Ki·ªÉm tra n·∫øu ng√†y n√†y b·ªã disable cho c·∫£ checkin V√Ä checkout
      if (disabledForCheckin.includes(dateStr) || disabledForCheckout.includes(dateStr)) {
        conflicts.push(dateStr);
