<!-- script cho đánh giá  -->
 <script>
  // Xử lý chọn sao
  const stars = document.querySelectorAll('#starRating i');
  let selectedRating = 0;

  stars.forEach(star => {
    star.classList.add('far'); // Khởi đầu toàn bộ là star rỗng (far)
    star.addEventListener('click', () => {
      selectedRating = parseInt(star.getAttribute('data-value'));
      stars.forEach(s => {
        if (parseInt(s.getAttribute('data-value')) <= selectedRating) {
          s.classList.remove('far');
          s.classList.add('fas');
        } else {
          s.classList.remove('fas');
          s.classList.add('far');
        }
      });
    });
  });

  // Xử lý submit form gửi đánh giá
  const reviewForm = document.getElementById('reviewForm');
  reviewForm.addEventListener('submit', function(e) {
    e.preventDefault();

    const comment = document.getElementById('commentBox').value.trim();
    if (selectedRating === 0) {
      alert('Vui lòng chọn số sao đánh giá');
      return;
    }
    if (!comment) {
      alert('Vui lòng nhập bình luận');
      return;
    }

    const data = {
      rating: selectedRating,
      comment: comment,
      roomId: <%= room.room_type_id %>
    };

    fetch('/api/review', {
      method: 'POST',
      headers: {'Content-Type': 'application/json'},
      body: JSON.stringify(data),
    })
    .then(res => res.json())
    .then(result => {
      if (result.success) {
        alert('Gửi đánh giá thành công!');
        addReviewToList(result.review);
        reviewForm.reset();
        selectedRating = 0;
        stars.forEach(s => s.classList.remove('fas'));
        stars.forEach(s => s.classList.add('far'));
      } else {
        alert('Gửi đánh giá thất bại: ' + result.message);
      }
    })
    .catch(() => alert('Lỗi khi gửi đánh giá'));
  });

  // Hàm thêm review mới vào danh sách ngay lập tức
  function addReviewToList(review) {
    const reviewList = document.getElementById('reviewList');
    const reviewHTML = `
      <div class="user-review border-top pt-3 mb-3">
        <div class="d-flex align-items-center mb-1">
          <img src="${review.User.avatar_url || 'https://via.placeholder.com/40'}" class="rounded-circle me-2" alt="avatar" width="40" height="40" />
          <strong>${review.User.name}</strong>
        </div>
        <div class="text-warning mb-1">${renderStars(review.rating)}</div>
        <p>${review.comment}</p>
        <small class="text-muted">Đăng ngày: ${new Date(review.createdAt).toLocaleDateString('vi-VN')}</small>
      </div>
    `;
    reviewList.insertAdjacentHTML('afterbegin', reviewHTML);
  }

  // Hàm tạo sao
  function renderStars(rating) {
    let stars = '';
    for (let i = 1; i <= 5; i++) {
      stars += i <= rating
        ? '<i class="fas fa-star"></i>'
        : '<i class="far fa-star"></i>';
    }
    return stars;
  }
</script>

