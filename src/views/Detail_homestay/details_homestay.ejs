        return;
      }

      // Ki·ªÉm tra checkout sau checkin
      if (checkoutDate <= checkinDate) {
        Swal.fire({
          icon: 'warning',
          title: 'Ng√†y kh√¥ng h·ª£p l·ªá',
          text: 'Ng√†y tr·∫£ ph√≤ng ph·∫£i sau ng√†y nh·∫≠n ph√≤ng.',
